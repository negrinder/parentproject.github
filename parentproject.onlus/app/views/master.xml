<Alloy>
	<Window title="Ultime Notizie">
		<!-- android menu -->
		<Menu platform="android">
			<MenuItem title="Refresh" icon="refresh.png" onClick="refreshRss"/>
		</Menu>

		<!-- rightNavButton for platforms that support them -->
		<RightNavButton platform="ios">
			<Button id="refreshButton" image="refresh.png" onClick="refreshRss"/>
		</RightNavButton>
		
		<ScrollableView id="scrollableView">
            <View id="view1" backgroundColor="#f4f4f4">
            	<ImageView id="image1"/>
            </View>
            <View id="view2" backgroundColor="#f4f4f4">
            	<ImageView id="image2"/>
            </View>
            <View id="view3" backgroundColor="#f4f4f4">
            	<ImageView id="image3"/>
            </View>
        </ScrollableView>		

		<!-- tableview representing all master rows -->
		<TableView id="table" onClick="openDetail">
			<HeaderView platform="android">
				<Label id="header">Ultime Notizie</Label>
			</HeaderView>
		</TableView>
	</Window>
</Alloy>